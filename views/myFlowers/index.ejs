<%- include('../partials/header') %>

    <div class="container center mt-3">
        <div class="row justify-content-between align-items-center">
            <div class="col">
                <h1>My Favorite Flowers</h1>
            </div>
        </div>
        <div class="mt-3 btn-col-lg-2">
            <!-- Allow them to search for flowers -->
            <a href="/myFlowers/search" class="btn btn-outline-success">Search for Flowers</a>

        </div>
        
        <div class="row">
            <% if (plants.length > 0) { %>
                <!-- Display existing favorite flowers here -->
                <% plants.forEach(p => { %>
                    <div class="card border-secondary mt-3 me-3 flower-card">
                        <div class="card-body">
                            <h5 class="card-title"><%= p.myFlowerName %></h5>
                            <p class="card-text">
                                Common Name: <%= p.commonName %><br>
                                Scientific Name: <%= p.scientificName %>
                            </p>
                        </div>
                        <div class="card-footer btn-group text-end">
                            <a href="/myFlowers/<%= p.id %>/edit" class="btn btn-outline-warning ms-3">Rename</a>
                            <a href="/myFlowers/<%= p.id %>/delete" class="btn btn-outline-danger me-3">Remove</a>
                        </div>
                    </div>
                <% }); %>

            <% } else { %>
                <h4>No favorite flowers saved</h4>
            <% } %>
        </div>
        <div class="mt-3 btn-col-lg-2">
            <!-- Allow them to search for flowers -->
            <a href="/myFlowers/search" class="btn btn-outline-success">Search for Flowers</a>

        </div>
    </div>

<%- include('../partials/footer') %>