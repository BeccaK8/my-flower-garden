<%- include('../partials/header') %>

    <div class="container mt-3">
        <h2>Edit My Favorite Flower</h2>
        
        <div class="input-group">
            <form action="/myFlowers/<%= myFlower.id %>?_method=PUT" method="post">
                <label for="myFlowerName">My Flower Name:</label>
                <input type="text" name="myFlowerName" value="<%= myFlower.myFlowerName %>" class="form-control" required>

                <input type="hidden" name="externalApiId" value="<%= myFlower.externalApiId%>">
                
                <label for="commonName">Common Name:</label>
                <input type="text" name="commonName" value="<%= myFlower.commonName%>" disabled class="form-control">

                <label for="scientificName">Scientific Name:</label>
                <input type="text" name="scientificName" value="<%= myFlower.scientificName%>" disabled class="form-control">

                <div class="btn-grp mt-3">
                    <a href="/myFlowers" class="btn btn-outline-secondary me-3 rounded-right">Cancel</a>
                    <input type="submit" class="btn btn-outline-warning me-3" value="Update Favorite">
                </div>
            </form>
        </div>
    </div>

<%- include('../partials/footer') %>